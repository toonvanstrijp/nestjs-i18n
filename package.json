{
  "name": "nestjs-i18n",
  "version": "8.0.1",
  "description": "",
  "author": "Toon van Strijp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ToonvanStrijp/nestjs-i18n"
  },
  "bin": {
    "nest-i18n": "bin/nest-i18n.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:cli": "rm -rf bin && tsc -p tsconfig.cli.json",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --config ./tests/jest-test.json",
    "test:cov": "jest --config ./tests/jest-test.json --coverage",
    "coveralls": "npm run test:cov && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/graphql": "^7.1.5",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/platform-fastify": "^7.0.7",
    "@nestjs/testing": "^7.0.7",
    "@types/accept-language-parser": "^1.5.1",
    "@types/commander": "^2.12.2",
    "@types/cookie": "^0.3.3",
    "@types/flat": "5.0.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.8",
    "@types/string-format": "^2.0.0",
    "@types/supertest": "^2.0.8",
    "apollo-server-express": "^2.11.0",
    "coveralls": "^3.0.11",
    "fastify": "^2.13.0",
    "graphql": "^15.0.0",
    "graphql-tools": "^4.0.7",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "10.1.2",
    "prettier": "2.0.3",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "chalk": "^4.0.0",
    "chokidar": "^3.3.1",
    "commander": "^5.0.0",
    "cookie": "^0.4.0",
    "flat": "^5.0.0",
    "lodash": "^4.17.0",
    "rxjs": "^6.5.4",
    "string-format": "^2.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
