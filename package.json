{
  "name": "nestjs-i18n",
  "version": "4.0.6",
  "description": "",
  "author": "Toon van Strijp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ToonvanStrijp/nestjs-i18n"
  },
  "bin": {
    "nest-i18n": "bin/nest-i18n.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:cli": "rm -rf bin && tsc -p tsconfig.cli.json",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --config ./tests/jest-test.json"
  },
  "devDependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/graphql": "^6.5.1",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/platform-fastify": "^6.7.2",
    "@nestjs/testing": "^6.7.2",
    "@types/commander": "^2.12.2",
    "@types/flat": "0.0.28",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.139",
    "@types/node": "^12.7.7",
    "@types/string-format": "^2.0.0",
    "@types/supertest": "^2.0.8",
    "apollo-server-express": "^2.9.4",
    "fastify": "^2.8.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.5",
    "husky": "3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.1",
    "flat": "^5.0.0",
    "lodash": "^4.17.0",
    "string-format": "^2.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
