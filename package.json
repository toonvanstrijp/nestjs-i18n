{
  "name": "nestjs-i18n",
  "version": "6.0.1",
  "description": "",
  "author": "Toon van Strijp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ToonvanStrijp/nestjs-i18n"
  },
  "bin": {
    "nest-i18n": "bin/nest-i18n.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:cli": "rm -rf bin && tsc -p tsconfig.cli.json",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --config ./tests/jest-test.json",
    "test:cov": "jest --config ./tests/jest-test.json --coverage",
    "coveralls": "npm run test:cov && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@nestjs/common": "^6.11.6",
    "@nestjs/core": "^6.11.6",
    "@nestjs/graphql": "^6.5.4",
    "@nestjs/platform-express": "^6.11.6",
    "@nestjs/platform-fastify": "^6.11.6",
    "@nestjs/testing": "^6.11.6",
    "@types/commander": "^2.12.2",
    "@types/cookie": "^0.3.3",
    "@types/flat": "5.0.0",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.0",
    "@types/string-format": "^2.0.0",
    "apollo-server-express": "^2.10.0",
    "coveralls": "^3.0.9",
    "fastify": "^2.12.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "husky": "4.2.2",
    "jest": "^25.1.0",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "commander": "^4.1.1",
    "cookie": "^0.4.0",
    "flat": "^5.0.0",
    "lodash": "^4.17.0",
    "rxjs": "^6.5.4",
    "string-format": "^2.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
