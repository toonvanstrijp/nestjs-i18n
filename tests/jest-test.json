{
  "globals": {
    "ts-jest": {
      "diagnostics": true
    }
  },
  "moduleFileExtensions": ["js", "json", "ts", "d.ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.ts", "!**/node_modules/**", "!src/utils/merge.ts"],
  "moduleNameMapper": {
    "fastify/lib/Reply": "fastify/lib/reply"
  }
}
