{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/dist"]
}
